extends layout-alerts

block content
	div.ui.menu
		div.header.item CAPS
		a.item(href='/home') Home
		a.active.item(href='/alerts') Alerts
		div.right.menu
			div.text.item(id='nameMenu') #{user.firstName} #{user.lastName}
			a.item(href='/logoff')
				<i class="sign out icon"></i>
	div.container(style='width:800px; position:relative; margin:0px auto; padding-top:20px' id='alertsContainer')
		div.ui.icon.message(id='noAlert')
			i.smile.icon
			div.content
				div.header Good news!
				p There are no alerts yet.

	script(type='text/javascript').
		var userData = !{JSON.stringify(user)};
		var alertsData = !{JSON.stringify(alerts)};